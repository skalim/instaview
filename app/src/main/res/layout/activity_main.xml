<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="saad.com.instaview.MainActivity"
    >

    <ImageView
        android:id="@+id/activity_main_image_view_background"
        style="@style/BackroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />

    <TextView
        fontPath="fonts/Title.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        tools:ignore="MissingPrefix"
        android:layout_centerInParent="true"
        android:id="@+id/activity_main_title" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/button_instagram"
        tools:ignore="ContentDescription"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/activity_main_button_instagram" />


</RelativeLayout>


